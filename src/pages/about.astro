import HeroTablet from "@/images/about/tablet/image-hero.jpg";
import HeroDesktop from "@/images/about/desktop/image-hero.jpg";

// COmponents
import BaseLayout from "@/layouts/BaseLayout.astro";
import InnerPageHero from "@/components/InnerPageHero.astro";
import OurHeritage from "@/components/about/OurHeritage.astro";
import Leaders from "@/components/about/Leaders.astro";

const data = {
  title: "Your team of professionals",
  subtitle: "About",
  description:
